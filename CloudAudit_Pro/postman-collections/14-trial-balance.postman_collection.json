{
  "info": {
    "name": "14 - Trial Balance",
    "_postman_id": "trial-balance-collection-014",
    "description": "Trial balance management endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Import Trial Balance",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"periodId\": \"{{period_id}}\",\n  \"accounts\": [\n    {\n      \"code\": \"1000\",\n      \"name\": \"Cash\",\n      \"accountType\": \"ASSETS\",\n      \"debit\": 50000.00,\n      \"credit\": 0\n    },\n    {\n      \"code\": \"2000\",\n      \"name\": \"Accounts Payable\",\n      \"accountType\": \"LIABILITIES\",\n      \"debit\": 0,\n      \"credit\": 25000.00\n    }\n  ]\n}"
        },
        "url": {"raw": "{{base_url}}/trial-balance/import", "host": ["{{base_url}}"], "path": ["trial-balance", "import"]}
      },
      "response": []
    },
    {
      "name": "Get Trial Balance",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}],
        "url": {"raw": "{{base_url}}/trial-balance/period/{{period_id}}", "host": ["{{base_url}}"], "path": ["trial-balance", "period", "{{period_id}}"]}
      },
      "response": []
    },
    {
      "name": "Export Trial Balance",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}],
        "url": {"raw": "{{base_url}}/trial-balance/period/{{period_id}}/export?format=EXCEL", "host": ["{{base_url}}"], "path": ["trial-balance", "period", "{{period_id}}", "export"], "query": [{"key": "format", "value": "EXCEL"}]}
      },
      "response": []
    }
  ],
  "auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{auth_token}}", "type": "string"}]}
}
