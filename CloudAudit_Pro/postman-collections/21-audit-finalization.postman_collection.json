{
  "info": {
    "name": "21 - Audit Finalization",
    "_postman_id": "audit-finalization-collection-021",
    "description": "Audit finalization process endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Start Finalization",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Content-Type", "value": "application/json"},
          {"key": "Authorization", "value": "Bearer {{auth_token}}"}
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"periodId\": \"{{period_id}}\",\n  \"finalizeDate\": \"2024-12-31\"\n}"
        },
        "url": {"raw": "{{base_url}}/audit-finalization/start", "host": ["{{base_url}}"], "path": ["audit-finalization", "start"]}
      },
      "response": []
    },
    {
      "name": "Get Finalization Status",
      "request": {
        "method": "GET",
        "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}],
        "url": {"raw": "{{base_url}}/audit-finalization/period/{{period_id}}", "host": ["{{base_url}}"], "path": ["audit-finalization", "period", "{{period_id}}"]}
      },
      "response": []
    },
    {
      "name": "Complete Finalization",
      "request": {
        "method": "POST",
        "header": [{"key": "Authorization", "value": "Bearer {{auth_token}}"}],
        "url": {"raw": "{{base_url}}/audit-finalization/{{period_id}}/complete", "host": ["{{base_url}}"], "path": ["audit-finalization", "{{period_id}}", "complete"]}
      },
      "response": []
    }
  ],
  "auth": {"type": "bearer", "bearer": [{"key": "token", "value": "{{auth_token}}", "type": "string"}]}
}
