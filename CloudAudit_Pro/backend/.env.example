# CloudAudit Pro Backend Environment Configuration

# Node Environment
NODE_ENV=development

# Server Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Database Configuration
# Format: postgresql://username:password@localhost:5432/database_name
DATABASE_URL=postgresql://postgres:password@localhost:5432/cloudaudit_pro_dev
DATABASE_SCHEMA=public

# JWT Configuration
JWT_ACCESS_SECRET=your-super-secret-jwt-access-key-change-in-production-min-32-chars
JWT_REFRESH_SECRET=your-super-secret-jwt-refresh-key-change-in-production-min-32-chars
JWT_ACCESS_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Redis Configuration (for session management and caching)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Email Configuration (for notifications and user verification)
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@example.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=CloudAudit Pro <noreply@cloudauditpro.com>

# Azure Storage Configuration (for document/file management)
AZURE_STORAGE_ACCOUNT_NAME=your-storage-account
AZURE_STORAGE_ACCOUNT_KEY=your-storage-key
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net

# Azure Active Directory B2C (optional - for enterprise SSO)
AZURE_AD_CLIENT_ID=your-azure-ad-client-id
AZURE_AD_CLIENT_SECRET=your-azure-ad-client-secret
AZURE_AD_TENANT_ID=your-azure-ad-tenant-id

# Application Configuration
APP_NAME=CloudAudit Pro
APP_VERSION=1.0.0
APP_DESCRIPTION=Multi-tenant audit management platform
COMPANY_NAME=Your Organization

# Security Configuration
BCRYPT_SALT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.jpg,.jpeg,.png,.txt

# Multi-Tenant Configuration
DEFAULT_TENANT_PLAN=starter
MAX_USERS_PER_TENANT=10
MAX_STORAGE_PER_TENANT=1073741824

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Development Tools Configuration
ENABLE_SWAGGER=true
SWAGGER_PATH=api/docs

# Production Security Headers
HELMET_ENABLED=true
CORS_ENABLED=true
COMPRESSION_ENABLED=true

# Monitoring and Analytics
ENABLE_METRICS=false
METRICS_ENDPOINT=/metrics
HEALTH_CHECK_ENDPOINT=/health

# Backup Configuration
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Integration Settings
WEBHOOK_SECRET=your-webhook-secret-for-integrations
API_KEY_ENCRYPTION_KEY=your-32-char-encryption-key-here

# Feature Flags
ENABLE_REAL_TIME_NOTIFICATIONS=true
ENABLE_ADVANCED_REPORTS=true
ENABLE_DOCUMENT_VERSIONING=true
ENABLE_AUDIT_TRAIL=true
ENABLE_TWO_FACTOR_AUTH=false