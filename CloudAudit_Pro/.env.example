# Azure Environment Variables
AZURE_SUBSCRIPTION_ID=your_subscription_id
AZURE_RESOURCE_GROUP=CloudAuditPro-RG
AZURE_LOCATION=eastus

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/cloudaudit_dev
POSTGRES_USER=cloudauditadmin
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=cloudaudit_dev

# Backend Configuration
PORT=3000
NODE_ENV=development
API_BASE_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here_make_it_long_and_secure
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_refresh_token_secret_here
JWT_REFRESH_EXPIRES_IN=7d

# Azure Storage Configuration
AZURE_STORAGE_ACCOUNT_NAME=cloudauditprostorage
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key
AZURE_STORAGE_CONTAINER_NAME=documents

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_password
FROM_EMAIL=noreply@cloudauditpro.com

# Frontend Configuration
REACT_APP_API_URL=http://localhost:3000
REACT_APP_WEBSOCKET_URL=ws://localhost:3000

# Azure Application Insights
APPINSIGHTS_INSTRUMENTATIONKEY=your_instrumentation_key

# Azure Key Vault (for production)
AZURE_KEY_VAULT_URL=https://cloudauditpro-kv.vault.azure.net/

# File Upload Limits
MAX_FILE_SIZE_MB=50
ALLOWED_FILE_TYPES=.pdf,.doc,.docx,.xls,.xlsx,.png,.jpg,.jpeg

# Tenant Configuration
DEFAULT_TENANT_MAX_USERS=10
DEFAULT_TENANT_MAX_COMPANIES=5
DEFAULT_TENANT_STORAGE_LIMIT_GB=10

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here
COOKIE_SECURE=false
COOKIE_MAX_AGE=86400000

# Monitoring
LOG_LEVEL=debug
ENABLE_REQUEST_LOGGING=true

# PWA Configuration
PWA_CACHE_DURATION=86400
PWA_OFFLINE_FALLBACK=true